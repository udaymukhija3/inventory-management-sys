# Inventory Management System - Environment Variables Template
# Copy this file to .env and update with secure values
# DO NOT commit .env to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Main transactional database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=inventory
POSTGRES_USER=inventory_user
POSTGRES_PASSWORD=your_secure_password_min_20_chars

# MongoDB (Product catalog and analytics)
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_mongo_password_min_20_chars
MONGO_DB=inventory_catalog

# Redis (Caching and real-time data)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_min_20_chars

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration (API Gateway)
JWT_SECRET=your_jwt_secret_MUST_be_at_least_48_characters_long_for_prod
JWT_EXPIRATION=86400000

# Service-to-Service Communication
SERVICE_API_KEY=your_service_api_key_min_32_chars

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================

AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=your_airflow_db_password_min_20_chars
AIRFLOW_POSTGRES_DB=airflow
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=your_airflow_admin_password_min_20_chars

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_grafana_password_min_20_chars

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================

ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
